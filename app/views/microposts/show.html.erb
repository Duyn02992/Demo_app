<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
		</section>
	</aside>
	<div class="col-md-8">
	<% if @micropost.comments.any? %>
	<h3>Comments (<%= @micropost.comments.count %>)</h3>
		<ol class="comments">
			<%= render @comments %>
		</ol>
		<%= will_paginate @comments %>
		<% end %>
		<%= render 'shared/comment_form' %>
	</div>
</div>
